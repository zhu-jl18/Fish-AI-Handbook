---
import '../styles/global.css'
const { title } = Astro.props
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow, noarchive, noimageindex" />
    <title>
      {title ? `${title} - Fish-Book · AI 使用手册` : 'Fish-Book · AI 使用手册'}
    </title>
    <meta name="description" content="Fish-Book - 实用的 AI 使用手册" />
    <!-- 自托管中文字体预加载（已使用 woff2 子集） -->
    <link
      rel="preload"
      href="/fonts/NotoSansSC-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/NotoSansSC-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- 已移除外部 Google Fonts 引用，使用系统英文栈与本地中文字体 -->
  </head>
  <body>
    <a href="#main-content" class="skip-link">跳到正文</a>
    <slot />
    <script type="module" src="/scripts/lightbox.js"></script>
  </body>
</html>
