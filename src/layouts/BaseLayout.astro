---
import '../styles/global.css'
import { siteConfig, getRobotsContent } from '../config/index'
import Footer from '../components/Footer.astro'

const { title, bodyClass } = Astro.props as {
  title?: string
  bodyClass?: string
}
const pageTitle = title
  ? `${title} - ${siteConfig.titleFull}`
  : siteConfig.titleFull
const robotsContent = getRobotsContent(siteConfig.robots)
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content={robotsContent} />
    <title>{pageTitle}</title>
    <meta name="description" content={siteConfig.description} />

    <!-- Favicon -->
    {
      siteConfig.favicon && (
        <>
          <link rel="icon" type="image/x-icon" href={siteConfig.favicon} />
          <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href={siteConfig.favicon}
          />
          <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href={siteConfig.favicon}
          />
          <link
            rel="apple-touch-icon"
            sizes="180x180"
            href={siteConfig.favicon}
          />
        </>
      )
    }

    <!-- 外部资源域名预连接（减少 DNS 查询和 TLS 握手时间） -->
    <link rel="dns-prefetch" href="https://media.makomako.dpdns.org" />
    <link
      rel="preconnect"
      href="https://media.makomako.dpdns.org"
      crossorigin
    />

    <!-- 自托管中文字体预加载（已使用 woff2 子集） -->
    <link
      rel="preload"
      href="/fonts/NotoSansSC-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/NotoSansSC-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- 已移除外部 Google Fonts 引用，使用系统英文栈与本地中文字体 -->
  </head>
  <body class={bodyClass}>
    <a href="#main-content" class="skip-link">跳到正文</a>
    <slot />
    <Footer />
    <script is:inline type="module" src="/scripts/lightbox.js"></script>
    <script is:inline type="module" src="/scripts/spoiler.js"></script>
    <script is:inline type="module" src="/scripts/relative-time.js"></script>
  </body>
</html>
