---
import '../styles/global.css'
import { siteConfig, getRobotsContent } from '../config/index'
import Footer from '../components/Footer.astro'

const { title, bodyClass, contributors, hasMath } = Astro.props as {
  title?: string
  bodyClass?: string
  contributors?: string[]
  hasMath?: boolean
}
const pageTitle = title
  ? `${title} - ${siteConfig.titleFull}`
  : siteConfig.titleFull
const robotsContent = getRobotsContent(siteConfig.robots)
const contributorsContent = contributors?.length ? contributors.join(',') : ''
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content={robotsContent} />
    <title>{pageTitle}</title>
    <meta name="description" content={siteConfig.description} />
    {
      contributorsContent && (
        <meta name="contributors" content={contributorsContent} />
      )
    }

    <!-- Favicon -->
    {
      siteConfig.favicon && (
        <>
          <link rel="icon" type="image/x-icon" href={siteConfig.favicon} />
          <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href={siteConfig.favicon}
          />
          <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href={siteConfig.favicon}
          />
          <link
            rel="apple-touch-icon"
            sizes="180x180"
            href={siteConfig.favicon}
          />
        </>
      )
    }

    <!-- 外部资源域名预连接（减少 DNS 查询和 TLS 握手时间） -->
    <link rel="dns-prefetch" href="https://media.makomako.dpdns.org" />
    <link
      rel="preconnect"
      href="https://media.makomako.dpdns.org"
      crossorigin
    />
    <link rel="preconnect" href="https://static.woshipm.com" crossorigin />
    <link rel="preconnect" href="https://framerusercontent.com" crossorigin />

    <!-- 自托管中文字体预加载（已使用 woff2 子集） -->
    <link
      rel="preload"
      href="/fonts/NotoSansSC-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/NotoSansSC-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- 已移除外部 Google Fonts 引用，使用系统英文栈与本地中文字体 -->

    <!-- KaTeX CSS - 仅在需要数学公式的页面加载 -->
    {hasMath && <link rel="stylesheet" href="/katex/katex.min.css" />}

    <!-- 主题初始化脚本（防止闪烁） -->
    <script is:inline>
      ;(function () {
        const stored = localStorage.getItem('theme-preference')
        if (stored === 'light') {
          document.documentElement.setAttribute('data-theme', 'light')
        } else if (
          !stored &&
          window.matchMedia('(prefers-color-scheme: light)').matches
        ) {
          document.documentElement.setAttribute('data-theme', 'light')
        }
      })()
    </script>

    <!-- 主题过渡样式 -->
    <style>
      html.theme-transition,
      html.theme-transition *,
      html.theme-transition *::before,
      html.theme-transition *::after {
        transition:
          background-color 0.3s ease,
          border-color 0.3s ease,
          color 0.3s ease !important;
        transition-delay: 0s !important;
      }
    </style>
  </head>
  <body class={bodyClass}>
    <a href="#main-content" class="skip-link">跳到正文</a>
    <slot />
    <Footer />
    <!-- Conditional script loading for performance -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        // Lightbox: only load when page has images in content area
        if (document.querySelector('.content-inner img')) {
          import('/scripts/lightbox.js')
        }
        // Spoiler: only load when page has spoiler elements
        if (document.querySelector('.spoiler')) {
          import('/scripts/spoiler.js')
        }
        // Relative-time: load after DOM ready (non-critical)
        if (document.querySelector('[data-timestamp]')) {
          import('/scripts/relative-time.js')
        }
      })
    </script>
    <script is:inline src="/scripts/theme-toggle.js"></script>
  </body>
</html>
