---
import BaseLayout from './BaseLayout.astro'
import Header from '../components/Header.astro'
import LeftSidebar from '../components/LeftSidebar.astro'
import RightSidebar from '../components/RightSidebar.astro'
import { getSidebarForPath } from '../scripts/sidebars'

const currentPath = Astro.url.pathname
const sidebarItems = getSidebarForPath(currentPath)

const { title, section, headings = [] } = Astro.props

// 基于 URL 别名推导导航高亮键（不依赖中文文案）
const first = currentPath.split('/').filter(Boolean)[0] ?? 'home'
const navKeys = new Set([
  'fish-talks',
  'setup',
  'basic-usage',
  'prompts',
  'advanced',
  'demo',
  'tech',
  'fun',
  'resources',
])
const currentKey = navKeys.has(first) ? first : 'home'
---

<BaseLayout title={title}>
  <Header currentPage={currentKey} />

  <div class="content-wrapper">
    <LeftSidebar section={section} items={sidebarItems} />

    <main id="main-content" class="content">
      <div class="content-inner">
        <slot />
      </div>
    </main>

    <RightSidebar headings={headings} />
  </div>
</BaseLayout>

<style>
  .content-wrapper {
    display: flex;
    margin-top: 60px;
    min-height: calc(100vh - 60px);
  }

  .content {
    flex: 1;
    margin-left: 250px;
    margin-right: 250px;
    padding: 3rem 3.5rem;
    background-color: var(--bg-color);
  }

  .content-inner {
    max-width: 780px;
    margin: 0 auto;
    width: 100%;
  }

  /* 内容区域标题紧凑样式 - 仅影响阅读内容，不影响侧边栏 */
  .content-inner :global(h1) {
    font-size: clamp(1.8rem, 1.8vw + 0.6rem, 2.1rem);
    margin-top: calc(var(--section-spacing) * 0.8);
    margin-bottom: 1.1rem;
  }

  .content-inner :global(h2) {
    font-size: clamp(1.45rem, 1.2vw + 0.9rem, 1.8rem);
    margin-top: calc(var(--section-spacing) * 0.8);
    margin-bottom: 0.85rem;
    border-bottom: 1px solid var(--heading-divider-color);
    padding-bottom: 0.5rem;
  }

  .content-inner :global(h3) {
    font-size: clamp(1.2rem, 0.9vw + 0.85rem, 1.4rem);
    margin-top: 1.6rem;
    margin-bottom: 0.6rem;
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 1440px) {
    .content {
      padding: 2.75rem 2.5rem;
    }
  }

  @media (max-width: 1200px) {
    .content {
      padding: 2.5rem 2rem;
    }
  }

  @media (max-width: 1024px) {
    .left-sidebar,
    .right-sidebar {
      display: none;
    }

    .content {
      margin-left: 0;
      margin-right: 0;
      padding: 2.25rem 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .content {
      padding: 2rem 1.25rem;
    }
  }
</style>
