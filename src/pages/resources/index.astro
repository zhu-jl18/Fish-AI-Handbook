---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { RESOURCES_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '06-resources')
let Content: any = null
let hasContent = false
if (entry) {
  try {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  } catch (error) {
    console.error('Error rendering content:', error)
    hasContent = false
  }
}
---

<ContentLayout
  entry={entry} title={entry?.data?.title ?? '资源合集'}
  sidebarItems={RESOURCES_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
