---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { RESOURCES_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '06-resources/2api')
const rendered = entry && (await entry.render())
---

<ContentLayout
  entry={entry} title={entry?.data?.title ?? '2API'}
  sidebarItems={RESOURCES_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
