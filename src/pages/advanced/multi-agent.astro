---
import ContentLayout from "../../layouts/ContentLayout.astro";
import { getEntry } from "astro:content";

let entry = await getEntry("docs", "04-advanced-techniques/multi-agent");
if (!entry) {
  entry = await getEntry("docs", "04-advanced-techniques/multi-agent/index");
}
const { Content } = await entry!.render();

import { ADVANCED_TECHNIQUES_SIDEBAR } from "../../scripts/sidebars";

const headings = [
  { id: "为什么", text: "为什么", depth: 1 },
  { id: "什么时候用", text: "什么时候用", depth: 2 },
  { id: "常见拓扑", text: "常见拓扑", depth: 2 },
  { id: "风险", text: "风险", depth: 2 },
];
---

<ContentLayout
  title="工程化进阶 / 多智能体协作"
  section="进阶玩法"
  sidebarItems={ADVANCED_TECHNIQUES_SIDEBAR}
  headings={headings}
>
  <Content />
</ContentLayout>
