---
import ContentLayout from "../../../layouts/ContentLayout.astro"
import { ADVANCED_TECHNIQUES_SIDEBAR } from "../../../scripts/sidebars"
import { getEntry } from "astro:content"

const entry = await getEntry("docs", "04-advanced-techniques/knowledge-bases/implementation")
let Content: any = null
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
}
const section = "进阶玩法"
const title = entry?.data?.title ?? "实践指南"
---

<ContentLayout
  title={title}
  section={section}
  sidebarItems={ADVANCED_TECHNIQUES_SIDEBAR}
>
  {Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
