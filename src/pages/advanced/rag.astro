---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { getEntry } from 'astro:content'

let entry = await getEntry('docs', '05-advanced-techniques/rag')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: advanced/rag', e)
}

import { ADVANCED_TECHNIQUES_SIDEBAR } from '../../scripts/sidebars'

// 添加相对路径信息

const headings = [
  { id: '为什么', text: '为什么', depth: 1 },
  { id: '什么时候用', text: '什么时候用', depth: 2 },
  { id: '关键组件', text: '关键组件', depth: 2 },
  { id: '常见坑', text: '常见坑', depth: 2 },
]
---

<ContentLayout
  title="工程化进阶 / RAG（检索增强生成）"
  section="进阶玩法"
  sidebarItems={ADVANCED_TECHNIQUES_SIDEBAR}
  headings={headings}

>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
