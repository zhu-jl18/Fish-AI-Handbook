import ContentLayout from '../../layouts/ContentLayout.astro';

const sidebarContent = `
  <a href="/tech">技术向概述</a>
  <a href="/tech/providers">主流服务商</a>
  <a href="/tech/management">密钥管理</a>
  <a href="/tech/security">安全最佳实践</a>
  <a href="/tech/cost-optimization" class="active">成本优化</a>
  <a href="/tech/monitoring">监控与告警</a>
`;

const headings = [
  { id: 'introduction', text: 'API成本优化策略', depth: 1 },
  { id: 'usage-patterns', text: '使用模式分析', depth: 2 },
  { id: 'optimization-techniques', text: '优化技巧', depth: 2 },
  { id: 'cost-monitoring', text: '成本监控', depth: 2 },
  { id: 'budget-control', text: '预算控制', depth: 2 }
