---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/app-integration')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: app-integration', e)
  hasContent = false
}

// 相对路径信息

const headings = [
  { id: '为啥要用第三方工具', text: '为啥要用第三方工具', depth: 1 },
  { id: '2025年值得推荐的工具', text: '2025年值得推荐的工具', depth: 1 },
  { id: '实际使用指南', text: '实际使用指南', depth: 1 },
  { id: '成本参考2025年最新', text: '成本参考（2025年最新）', depth: 1 },
  { id: '注意事项', text: '注意事项', depth: 1 },
]
---

<ContentLayout
  title="第三方集成聊天软件 - 一个客户端搞定所有AI"
  section="基础使用"
  sidebarItems={BASIC_USAGE_SIDEBAR}
  headings={headings}

>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>