---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/webchat')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: webchat', e)
  hasContent = false
}

// 相对路径信息

const headings = [
  { id: '为什么先从网页开始', text: '为什么先从网页开始', depth: 1 },
  { id: '三大主力选手2025年最新', text: '三大主力选手（2025年最新）', depth: 1 },
  { id: '实际使用建议', text: '实际使用建议', depth: 1 },
  { id: '使用注意事项', text: '使用注意事项', depth: 1 },
]
---

<ContentLayout
  title="官方WebChat - 最简单粗暴的开始"
  section="基础使用"
  sidebarItems={BASIC_USAGE_SIDEBAR}
  headings={headings}

>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>