---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/editor-agent')
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? 'AI 编辑器 - 你的写作与改稿助手'}
  section="基础用法"
  sidebarItems={BASIC_USAGE_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
