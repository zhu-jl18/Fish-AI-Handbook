---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/editor-agent')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: editor-agent', e)
  hasContent = false
}

// 相对路径信息

const headings = [
  { id: '为啥代码编辑器集成这么香', text: '为啥代码编辑器集成这么香', depth: 1 },
  { id: '2025年主流选择对比', text: '2025年主流选择对比', depth: 1 },
  { id: '实战使用指南', text: '实战使用指南', depth: 1 },
  { id: '性能对比2025年数据', text: '性能对比（2025年数据）', depth: 1 },
  { id: '选择建议', text: '选择建议', depth: 1 },
  { id: '最佳实践', text: '最佳实践', depth: 1 },
  { id: '注意事项', text: '注意事项', depth: 1 },
]
---

<ContentLayout
  title="AI代码编辑器 - 配对编程的未来"
  section="基础使用"
  sidebarItems={BASIC_USAGE_SIDEBAR}
  headings={headings}

>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>