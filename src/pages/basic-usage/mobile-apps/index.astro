---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/mobile-apps')
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? '移动端 AI 应用 - 随时随地的智能体验'}
  sidebarItems={BASIC_USAGE_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
