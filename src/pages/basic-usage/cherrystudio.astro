---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/cherrystudio')
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? 'Cherry Studio · 基础用法与技巧'}
  section="基础用法"
  sidebarItems={BASIC_USAGE_SIDEBAR}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
