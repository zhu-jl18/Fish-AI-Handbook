---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { BASIC_USAGE_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '02-basic-usage/codex')
const rendered = entry && (await entry.render())
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'Codex · 基础用法与技巧'}
  sidebarItems={BASIC_USAGE_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
