---
import ContentLayout from '../../../layouts/ContentLayout.astro';
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars';
import { getEntry } from 'astro:content';

const entry = await getEntry('docs', '01-fish-talks/llm/rankings');
const { Content } = await entry.render();

const sidebarContent = `
  <a href="/fish-talks">鱼说必看</a>
  <a href="/fish-talks/overview">概览</a>
  <div>
    <a href="/fish-talks/llm" class="active">大模型常识</a>
    <div class="submenu">
      <a href="/fish-talks/llm/brief">模型分类</a>
      <a href="/fish-talks/llm/models">常见模型</a>
      <a href="/fish-talks/llm/rankings" class="active">大模型排名</a>
    </div>
  </div>
`;

const headings = [
  { id: '提示', text: '提示', depth: 2 },
  { id: 'lmarena', text: 'LMArena', depth: 2 }
];
---

<ContentLayout 
  title="Fish想说 - 大模型排名"
  section="Fish想说"
  sidebarContent={sidebarContent}
  sidebarItems={FISH_TALKS_SIDEBAR}
  headings={headings}
>
  <Content />
  <h2 id="lmarena">LMArena</h2>
  <iframe src="https://lmarena.ai/" style="width: 100%; height: 70vh; border: 1px solid #333; border-radius: 6px;" loading="lazy"></iframe>
  <p>若内嵌不可用，请访问：<a href="https://lmarena.ai/" target="_blank" rel="noopener">LMArena 官网</a></p>
</ContentLayout>


