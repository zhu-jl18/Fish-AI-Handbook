---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/llm/rankings')
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? '模型排行榜'}
  section="鱼说必看"
  sidebarItems={FISH_TALKS_SIDEBAR}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
  <h2 id="lmarena">LMArena</h2>
  <iframe
    src="https://lmarena.ai/"
    style="width: 100%; height: 70vh; border: 1px solid #333; border-radius: 6px;"
    loading="lazy"></iframe>
  <p>
    如果嵌入无法正常显示，可前往
    <a href="https://lmarena.ai/" target="_blank" rel="noopener">LMArena 官网</a>
  </p>
</ContentLayout>

