---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

let entry = await getEntry('docs', '01-fish-talks/advanced-concepts')
if (!entry) {
  entry = await getEntry('docs', '01-fish-talks/advanced-concepts/index')
}
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}

const headings = [
  { id: '为什么这些概念重要', text: '为什么这些概念重要', depth: 1 },
]
---

<ContentLayout
  title={`Fish想说 - 进阶概念 / 概览`}
  section="Fish想说"
  sidebarItems={FISH_TALKS_SIDEBAR}
  headings={headings}
>
  <Content />
</ContentLayout>
