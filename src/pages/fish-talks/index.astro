---
import ContentLayout from "../../layouts/ContentLayout.astro"
import { FISH_TALKS_SIDEBAR } from "../../scripts/sidebars"
import { getEntry } from "astro:content"

const entry = await getEntry("docs", "01-fish-talks")
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: fish-talks/index', e)
}
---

<ContentLayout title={entry?.data?.title || "Fish 想说"} section="Fish 想说" sidebarItems={FISH_TALKS_SIDEBAR} headings={[]}>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
