---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/model-terms/context-steps')
const { Content } = await entry.render()

const headings = [{ id: 'context-steps', text: '上下文步数', depth: 1 }]
---

<ContentLayout
  title={`Fish想说 - 模型相关术语 / ${entry.data.title}`}
