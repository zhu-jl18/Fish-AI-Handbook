---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/model-terms/thinking')
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}

const headings = [
  { id: 'thinking', text: '思考（Thinking）是什么', depth: 1 },
  { id: 'cot', text: '思维链（CoT）与可控思考', depth: 2 },
  { id: 'hidden', text: '隐式思考与安全', depth: 2 },
  { id: 'tips', text: '提示词写法与建议', depth: 2 },
]
---

<ContentLayout
  title={`Fish想说 - 模型相关术语 / ${entry?.data?.title ?? "思维"}`}
  section="Fish想说"
  sidebarItems={FISH_TALKS_SIDEBAR}
  headings={headings}
>
  <Content />
</ContentLayout>
