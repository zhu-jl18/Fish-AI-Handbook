---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/model-terms/temperature')
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}

const headings = [
  { id: 'temperature', text: '温度（temperature）是什么', depth: 1 },
  { id: 'effect', text: '它如何影响输出', depth: 2 },
  { id: 'ranges', text: '常见取值与建议', depth: 2 },
  { id: 'compare', text: '与top_p、top_k的关系', depth: 2 },
  { id: 'tips', text: '实战建议', depth: 2 },
]
---

<ContentLayout
  title={`Fish想说 - 模型相关术语 / ${entry?.data?.title ?? "温度"}`}
  section="Fish想说"
  sidebarItems={FISH_TALKS_SIDEBAR}
  headings={headings}
>
  <Content />
</ContentLayout>
