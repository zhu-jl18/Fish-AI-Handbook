---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/glossary/derived-terms')
const rendered = entry && (await entry.render())
---

<ContentLayout
  entry={entry} title={entry?.data?.title ?? '衍生词'}
  sidebarItems={FISH_TALKS_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
