---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-fish-talks/glossary/reverse-proxy')
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}

// 目录由 RightSidebar 自动生成
---

<ContentLayout
  title={`鱼说 - 相关概念 / ${entry?.data?.title ?? "反向代理"}`}
  section="鱼说必看"
  sidebarItems={FISH_TALKS_SIDEBAR}
>
  <Content />
</ContentLayout>
