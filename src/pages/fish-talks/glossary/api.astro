---
import ContentLayout from '../../../layouts/ContentLayout.astro';
import { FISH_TALKS_SIDEBAR } from '../../../scripts/sidebars';
import { getEntry } from 'astro:content';

const entry = await getEntry('docs', '01-fish-talks/glossary/api');
const { Content } = await entry.render();

const sidebarContent = `
  <a href="/fish-talks">鱼说必看</a>
  <a href="/fish-talks/overview">概览</a>
  <div>
    <a href="/fish-talks/llm">大模型常识</a>
    <div class="submenu">
      <a href="/fish-talks/llm/brief">模型分类</a>
      <a href="/fish-talks/llm/models">常见模型</a>
      <a href="/fish-talks/llm/rankings">大模型排名</a>
    </div>
  </div>
  <div>
    <a href="/fish-talks/glossary" class="active">其他常见术语</a>
    <div class="submenu">
      <a href="/fish-talks/glossary/api" class="active">API</a>
      <a href="/fish-talks/glossary/proxy">代理</a>
      <a href="/fish-talks/glossary/reverse-proxy">反代</a>
      <a href="/fish-talks/glossary/interface">接口</a>
      <a href="/fish-talks/glossary/env">环境变量</a>
    </div>
  </div>
`;

const headings = [
  { id: '为什么要懂-api', text: '为什么要懂 API', depth: 1 }
];
---

<ContentLayout 
  title={`Fish想说 - 其他常见术语 / ${entry.data.title}`}
  section="Fish想说"
  sidebarContent={sidebarContent}
  sidebarItems={FISH_TALKS_SIDEBAR}
  headings={headings}
>
  <Content />
</ContentLayout>


