---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { CONCEPTS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '01-concepts/glossary/ai-concepts')
const rendered = entry && (await entry.render())
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'AI核心概念速查'}
  sidebarItems={CONCEPTS_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
