---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'

const heroLinks = [
  { href: '/fish-talks', label: '鱼说必看' },
  { href: '/basic-usage', label: '基础用法' },
  { href: '/prompts', label: '提示词' },
  { href: '/advanced', label: '进阶玩法' },
  { href: '/fun', label: '好玩的' },
  { href: '/resources', label: '资源合集' },
  { href: '/setup', label: '配置指南' },
]
---

<BaseLayout title="首页">
  <Header currentPage="home" />

  <main class="main-content">
    <div class="hero">
      <h1>Fish写给朋友们的AI使用指南</h1>
      <p class="hero-subtitle">简洁清晰的AI教程，从基础使用到进阶玩法</p>
      <div class="hero-links">
        {
          heroLinks.map((link) => (
            <a href={link.href} class="hero-link">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .main-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    height: calc(100vh - 60px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero {
    text-align: center;
    width: 100%;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff 0%, #999 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: #999;
    margin-bottom: 3rem;
  }

  .hero-links {
    display: grid;
    grid-template-columns: repeat(3, minmax(160px, 1fr));
    gap: 1.2rem;
    justify-items: stretch;
    align-items: stretch;
    margin-top: 3rem;
  }

  .hero-link {
    color: #cccccc;
    text-decoration: none;
    font-weight: 600;
    padding: 0.95rem 1.2rem;
    border: 1px solid #333333;
    border-radius: 6px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.02);
  }

  .hero-link:hover {
    background-color: #1a1a1a;
    color: #ffffff;
    border-color: transparent;
  }

  @media (max-width: 1200px) {
    .main-content {
      max-width: 1000px;
    }
    .hero-links {
      grid-template-columns: repeat(3, minmax(140px, 1fr));
      gap: 1rem;
    }
  }

  @media (max-width: 900px) {
    .hero-links {
      grid-template-columns: repeat(2, minmax(130px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 2rem 1rem;
    }
    .hero h1 {
      font-size: 2rem;
    }
    .hero-links {
      gap: 0.8rem;
    }
  }
</style>
