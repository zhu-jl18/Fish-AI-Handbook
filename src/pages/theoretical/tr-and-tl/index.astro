---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { THEORETICAL_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '07-theoretical/tr-and-tl')
const rendered = entry && (await entry.render())
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'TR & TL'}
  sidebarItems={THEORETICAL_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
