---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '08-fun/llm-unlocking')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: fun/llm-unlocking', e)
}

import { FUN_SIDEBAR } from '../../scripts/sidebars'

// 目录由 RightSidebar 自动生成
---

<ContentLayout
  title="模型解锁教程"
  section="好玩的"
  sidebarItems={FUN_SIDEBAR}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
