---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '08-fun/silver-trivern')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: fun/silver-trivern', e)
}

import { FUN_SIDEBAR } from '../../scripts/sidebars'

const headings = []
---

<ContentLayout
  title="Silver Trivern 酒馆使用"
  section="好玩的"
  sidebarItems={FUN_SIDEBAR}
  headings={headings}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
