---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { FUN_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '05-fun/ai-drawing/banana')
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? '🍌 banana'}
  sidebarItems={FUN_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
