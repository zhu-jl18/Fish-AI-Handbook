---
import ContentLayout from "../../layouts/ContentLayout.astro"
import { FUN_SIDEBAR } from "../../scripts/sidebars"
import { getEntry } from "astro:content"

const entry = await getEntry("docs", "05-fun")
let Content: any = null
let hasContent = false
if (entry) {
  try {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  } catch (error) {
    console.error("Error rendering content:", error)
    hasContent = false
  }
}
---

<ContentLayout title={entry?.data?.title ?? "好玩的"} section="好玩的" sidebarItems={FUN_SIDEBAR}>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
