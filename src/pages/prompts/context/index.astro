---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { PROMPTS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '03-prompts/context')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: prompts/context', e)
}
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'Context'}
  sidebarItems={PROMPTS_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
