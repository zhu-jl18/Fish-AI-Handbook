---
import ContentLayout from "../../../layouts/ContentLayout.astro"
import { PROMPTS_SIDEBAR } from "../../../scripts/sidebars"
import { getEntry } from "astro:content"

const entry = await getEntry("docs", "04-prompts/interaction-basics")
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error("Render error: prompts/interaction-basics", e)
}
---

<ContentLayout title={entry?.data?.title ?? "交互基础"} section="提示词" sidebarItems={PROMPTS_SIDEBAR} headings={[]}>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
