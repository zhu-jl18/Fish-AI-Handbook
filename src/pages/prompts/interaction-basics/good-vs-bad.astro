---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { PROMPTS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry(
  'docs',
  '03-prompts/interaction-basics/good-vs-bad',
)
const rendered = entry && (await entry.render())
---

<ContentLayout
  title={entry?.data?.title ?? '好与坏'}
  sidebarItems={PROMPTS_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {rendered ? <rendered.Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
