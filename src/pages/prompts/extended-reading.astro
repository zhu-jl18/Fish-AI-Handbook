---
import ContentLayout from '../../layouts/ContentLayout.astro'
import { PROMPTS_SIDEBAR } from '../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '03-prompts/extended-reading')
let Content: any = null
let hasContent = false
try {
  if (entry) {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  }
} catch (e) {
  console.error('Render error: prompts/extended-reading', e)
}
---

<ContentLayout
  title={entry?.data?.title ?? '扩展阅读'}
  section="提示词"
  sidebarItems={PROMPTS_SIDEBAR}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
