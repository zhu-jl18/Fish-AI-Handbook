---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { PROMPTS_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '03-prompts/assistants')
let Content: any = null
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
}
const section = '提示词'
const title = entry?.data?.title ?? 'ASSISTANTS'
---

<ContentLayout
  entry={entry}
  title={title}
  section={section}
  sidebarItems={PROMPTS_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
