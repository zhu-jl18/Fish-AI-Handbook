---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { SETUP_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '99-setup/nodejs')
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'Node.js'}
  sidebarItems={SETUP_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  <Content />
</ContentLayout>
