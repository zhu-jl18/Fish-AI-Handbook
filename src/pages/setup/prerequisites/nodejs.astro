---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { SETUP_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '03-setup/prerequisites/nodejs')
let Content: any
if (entry) {
  const rendered = await entry.render()
  Content = rendered.Content
} else {
  Content = () => null
}

---

<ContentLayout
  title={`配置指南 - 环境准备 / Node.js`}
  section="配置指南"
  sidebarItems={SETUP_SIDEBAR}
  headings={[]}
>
  <Content />
</ContentLayout>
