---
import ContentLayout from '../../../layouts/ContentLayout.astro'
import { SETUP_SIDEBAR } from '../../../scripts/sidebars'
import { getEntry } from 'astro:content'

const entry = await getEntry('docs', '99-setup/claude-code')
let Content: any = null
let hasContent = false
if (entry) {
  try {
    const rendered = await entry.render()
    Content = rendered.Content
    hasContent = true
  } catch (error) {
    console.error('Error rendering content:', error)
    hasContent = false
  }
}
---

<ContentLayout
  entry={entry}
  title={entry?.data?.title ?? 'Claude Code'}
  sidebarItems={SETUP_SIDEBAR}
  contributors={entry?.data?.contributors}
>
  {hasContent && Content ? <Content /> : <div>文档未找到或渲染失败</div>}
</ContentLayout>
