---
import type { Notification } from '../config'

interface Props {
  notifications: Notification[]
}

const { notifications } = Astro.props
---

<div
  id="notification-popover"
  class="notification-popover"
  role="dialog"
  aria-label="站点通知"
>
  <div class="popover-header">
    <h3 class="popover-title">通知</h3>
    <button
      type="button"
      class="popover-close"
      aria-label="关闭通知"
      data-close-popover
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 6 6 18"></path>
        <path d="m6 6 12 12"></path>
      </svg>
    </button>
  </div>

  <div class="popover-content">
    {
      notifications.length === 0 ? (
        <div class="empty-state">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="28"
            height="28"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 8a6 6 0 0 0-12 0c0 7-3 9-3 9h18s-3-2-3-9" />
            <path d="M13.73 21a2 2 0 0 1-3.46 0" />
          </svg>
          <p>暂无通知</p>
        </div>
      ) : (
        <ul class="notification-list">
          {notifications.map((notification) => (
            <li class="notification-item">
              {notification.link ? (
                <a href={notification.link} class="notification-body">
                  <div class="notification-main">
                    <span
                      class={`notification-icon notification-icon-${notification.type}`}
                    />
                    <div class="notification-text">
                      <h4 class="notification-title">{notification.title}</h4>
                      <p class="notification-content">{notification.content}</p>
                    </div>
                  </div>
                  {notification.date && (
                    <time
                      class="notification-date"
                      datetime={notification.date}
                    >
                      {notification.date}
                    </time>
                  )}
                </a>
              ) : (
                <div class="notification-body">
                  <div class="notification-main">
                    <span
                      class={`notification-icon notification-icon-${notification.type}`}
                    />
                    <div class="notification-text">
                      <h4 class="notification-title">{notification.title}</h4>
                      <p class="notification-content">{notification.content}</p>
                    </div>
                  </div>
                  {notification.date && (
                    <time
                      class="notification-date"
                      datetime={notification.date}
                    >
                      {notification.date}
                    </time>
                  )}
                </div>
              )}
            </li>
          ))}
        </ul>
      )
    }
  </div>
</div>

<style>
  .notification-popover {
    position: fixed;
    top: 60px;
    left: 50%;
    transform: translateX(-50%);
    width: 420px;
    max-width: calc(100vw - 32px);
    max-height: calc(100vh - 120px);
    background: var(--header-search-bg);
    border: none;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    backdrop-filter: blur(16px);
    opacity: 0;
    visibility: hidden;
    transform: translateX(-50%) scale(0.95) translateY(-8px);
    transition:
      opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.2s cubic-bezier(0.4, 0, 0.2, 1),
      visibility 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .notification-popover.open {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) scale(1) translateY(0);
  }

  .popover-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 16px 12px;
    flex-shrink: 0;
  }

  .popover-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--header-text-strong);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

  .popover-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border: none;
    background: transparent;
    color: var(--header-text);
    border-radius: 6px;
    cursor: pointer;
    opacity: 0.5;
    transition: all 0.15s ease;
  }

  .popover-close:hover {
    opacity: 1;
    background: var(--header-icon-bg-hover);
  }

  .popover-content {
    overflow-y: auto;
    flex: 1;
    min-height: 0;
  }

  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 24px;
    color: var(--header-text-muted);
  }

  .empty-state svg {
    margin-bottom: 10px;
    opacity: 0.3;
  }

  .empty-state p {
    margin: 0;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  .notification-list {
    list-style: none;
    margin: 0;
    padding: 4px 0 8px;
  }

  .notification-item {
    margin: 0;
    transition: all 0.15s ease;
  }

  .notification-item:hover {
    background: rgba(0, 0, 0, 0.02);
  }

  .notification-body {
    display: flex;
    flex-direction: column;
    gap: 6px;
    padding: 10px 16px;
    text-decoration: none;
    color: inherit;
  }

  a.notification-body {
    cursor: pointer;
  }

  div.notification-body {
    cursor: default;
  }

  .notification-main {
    display: flex;
    gap: 12px;
    align-items: flex-start;
  }

  .notification-icon {
    flex-shrink: 0;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    margin-top: 5px;
    opacity: 0.8;
  }

  .notification-icon-announcement {
    background: #3b82f6;
  }

  .notification-icon-info {
    background: #06b6d4;
  }

  .notification-icon-warning {
    background: #f59e0b;
  }

  .notification-icon-success {
    background: #10b981;
  }

  .notification-text {
    flex: 1;
    min-width: 0;
  }

  .notification-title {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--header-text-strong);
    margin: 0 0 3px 0;
    line-height: 1.4;
  }

  .notification-content {
    font-size: 0.75rem;
    line-height: 1.5;
    color: var(--header-text);
    margin: 0;
    opacity: 0.85;
  }

  .notification-date {
    display: block;
    font-size: 0.6875rem;
    color: var(--header-text-muted);
    margin-left: 17px;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .notification-popover {
      top: 56px;
      width: calc(100vw - 24px);
      max-height: calc(100vh - 100px);
    }

    .popover-header {
      padding: 12px 14px 10px;
    }

    .notification-body {
      padding: 9px 14px;
    }

    .notification-date {
      margin-left: 14px;
    }
  }
</style>

<script>
  const popover = document.getElementById('notification-popover')
  const bellButton = document.querySelector('[aria-label="通知"]')
  const closeButton = document.querySelector('[data-close-popover]')

  /**
   * 打开/关闭 Popover
   */
  function togglePopover() {
    if (!popover) return
    popover.classList.toggle('open')
  }

  /**
   * 关闭 Popover
   */
  function closePopover() {
    if (!popover) return
    popover.classList.remove('open')
  }

  /**
   * 点击外部关闭
   */
  function handleOutsideClick(event: MouseEvent) {
    const target = event.target as HTMLElement
    if (
      popover &&
      !popover.contains(target) &&
      bellButton &&
      !bellButton.contains(target)
    ) {
      closePopover()
    }
  }

  /**
   * ESC 键关闭
   */
  function handleEscKey(event: KeyboardEvent) {
    if (event.key === 'Escape') {
      closePopover()
    }
  }

  // 铃铛按钮点击事件
  bellButton?.addEventListener('click', togglePopover)

  // 关闭按钮点击事件
  closeButton?.addEventListener('click', closePopover)

  // 点击外部关闭
  document.addEventListener('click', handleOutsideClick)

  // ESC 键关闭
  document.addEventListener('keydown', handleEscKey)
</script>
