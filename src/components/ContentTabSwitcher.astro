---
/**
 * ContentTabSwitcher - GitHub-style tab bar for multi-content pages
 *
 * Renders a horizontal tab bar similar to GitHub's README/CONTRIBUTING switcher.
 * Only renders when there are 2+ tabs. Handles client-side tab switching without URL changes.
 *
 * Currently piloted in: /resources chapter
 * Extensibility: Can be reused in other chapters via their specific layouts
 */

export interface Tab {
  id: string
  label: string
  isDefault: boolean
  entryId: string
}

interface Props {
  tabs: Tab[]
  /** Optional: ID prefix for DOM elements */
  prefix?: string
}

import contentTabsUrl from '../scripts/content-tabs.ts?url'

const { tabs, prefix = 'content-tab' } = Astro.props

// Don't render if only one tab
if (tabs.length < 2) {
  return null
}
---

<div class="content-tabs-wrapper" data-tab-count={tabs.length}>
  <nav class="content-tabs" role="tablist" aria-label="Content sections">
    {
      tabs.map((tab) => (
        <button
          type="button"
          role="tab"
          class={`content-tab ${tab.isDefault ? 'active' : ''}`}
          id={`${prefix}-${tab.id}`}
          aria-selected={tab.isDefault ? 'true' : 'false'}
          aria-controls={`${prefix}-panel-${tab.id}`}
          tabindex={tab.isDefault ? 0 : -1}
          data-tab-id={tab.id}
          data-entry-id={tab.entryId}
        >
          <span class="content-tab-label">{tab.label}</span>
        </button>
      ))
    }
    <button
      type="button"
      class="content-tab-copy-btn"
      aria-label="复制当前标签Markdown源码"
      title="复制当前标签Markdown源码"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <rect x="8" y="8" width="12" height="12" rx="2" ry="2"></rect>
        <rect x="4" y="4" width="12" height="12" rx="2" ry="2"></rect>
      </svg>
    </button>
    <div class="content-tabs-indicator" aria-hidden="true"></div>
  </nav>
</div>

<style>
  .content-tabs-wrapper {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .content-tabs {
    display: flex;
    align-items: stretch;
    gap: 0;
    position: relative;
    margin: 0;
    padding: 0;
  }

  .content-tab-copy-btn {
    margin-left: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 0.75rem;
    color: var(--text-muted);
    background: transparent;
    border: none;
    cursor: pointer;
    transition:
      color var(--motion-duration-sm) var(--motion-ease-standard),
      background-color var(--motion-duration-sm) var(--motion-ease-standard);
  }

  .content-tab-copy-btn:hover {
    color: var(--text-color);
    background: var(--surface-tint-03);
  }

  .content-tab-copy-btn:focus-visible {
    outline: 2px solid var(--header-accent);
    outline-offset: -2px;
    border-radius: var(--border-radius-sm);
  }

  .content-tab {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    transition:
      color var(--motion-duration-sm) var(--motion-ease-standard),
      border-color var(--motion-duration-sm) var(--motion-ease-standard),
      background-color var(--motion-duration-sm) var(--motion-ease-standard);
    white-space: nowrap;
    margin-bottom: -1px;
  }

  .content-tab:hover {
    color: var(--text-color);
    background: var(--surface-tint-03);
  }

  .content-tab:focus-visible {
    outline: 2px solid var(--header-accent);
    outline-offset: -2px;
    border-radius: var(--border-radius-sm);
  }

  .content-tab.active {
    color: var(--color-text-white);
    border-bottom-color: var(--header-accent);
  }

  .content-tab.active:hover {
    background: transparent;
  }

  .content-tab-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  /* Animated indicator (optional enhancement) */
  .content-tabs-indicator {
    display: none; /* Can be enabled for sliding indicator effect */
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .content-tabs-wrapper {
      margin-bottom: 1rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .content-tabs {
      min-width: max-content;
    }

    .content-tab {
      padding: 0.5rem 0.75rem;
      font-size: 0.8125rem;
    }
  }
</style>

<script type="module" src={contentTabsUrl}></script>
