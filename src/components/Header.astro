---
const { currentPage } = Astro.props
---

<header class="header">
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="logo">Fish-Book</a>
      <div class="nav-links">
        <a
          href="/fish-talks"
          class={currentPage === 'fish-talks' ? 'active' : ''}>鱼说必看</a
        >
        <a
          href="/basic-usage"
          class={currentPage === 'basic-usage' ? 'active' : ''}>基础用法</a
        >
        <a href="/prompts" class={currentPage === 'prompts' ? 'active' : ''}
          >提示词</a
        >
        <a href="/advanced" class={currentPage === 'advanced' ? 'active' : ''}
          >进阶玩法</a
        >
        <a href="/fun" class={currentPage === 'fun' ? 'active' : ''}>好玩的</a>
        <a href="/resources" class={currentPage === 'resources' ? 'active' : ''}
          >资源合集</a
        >
        <a href="/setup" class={currentPage === 'setup' ? 'active' : ''}
          >配置指南</a
        >
      </div>
      <div class="nav-actions">
        <a href="/search" class="search-button" aria-label="搜索文档">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    background-color: var(--color-pure-black);
    border-bottom: 1px solid var(--color-border-dark);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  .nav-container {
    max-width: var(--layout-max-width);
    margin: 0 auto;
    padding: 0 calc(var(--layout-gap) + 1rem);
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    gap: 1rem;
  }
  .logo {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-text-white);
    text-decoration: none;
  }
  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-actions {
    display: flex;
    align-items: center;
  }
  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--color-text-secondary);
    background: var(--color-bg-button);
    border: 1px solid var(--color-border-dark);
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  .search-button:hover {
    color: var(--color-text-white);
    border-color: var(--color-border-hover);
    background: var(--color-bg-button-hover);
  }

  .nav-links a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-weight: 400;
    transition: color 0.2s ease;
    position: relative;
  }
  .nav-links a:hover {
    color: var(--color-text-white);
  }
  .nav-links a.active {
    color: var(--color-text-white);
    background-color: var(--surface-tint-08);
    padding: 4px 12px;
    border-radius: 6px;
  }

  @media (max-width: 1440px) {
    .nav-container {
      padding: 0 calc(var(--layout-gap) * 0.75);
    }
  }

  @media (max-width: 1024px) {
    .nav-container {
      padding: 0 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }
  }
</style>
